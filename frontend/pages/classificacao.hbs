<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Partida: TimeX x TimeY - Estadio 00:00h
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="formGroupExampleInput">Mandante</label>
            <input
              type="text"
              class="form-control"
              id="formGroupExampleInput"
              placeholder="TimeX"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Visitante</label>
            <input
              type="text"
              class="form-control"
              id="formGroupExampleInput2"
              placeholder="TimeY"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput">Transmissão</label>
            <input
              type="text"
              class="form-control"
              id="formGroupExampleInput"
              placeholder="# TV - Cleber Machado (Narrador)"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Resultado</label>
            <input
              type="text"
              class="form-control"
              id="formGroupExampleInput2"
              placeholder="TimeX 0 x 0 Timey"
            />
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Arbitragem</label>
            <input
              type="text"
              class="form-control"
              id="formGroupExampleInput2"
              placeholder="# Fulano - Ciclano - Beltrano"
            />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
